{% extends 'base_layout.html.twig' %}

{% trans_default_domain "login" %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2
                    col-sm-5 col-sm-offset-2
                    col-md-4 col-md-offset-4
                    col-lg-4 col-lg-offset-4 ">
            <div class="page-header">
                <h1>{{ 'email.title'|trans|raw }}</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-9 col-xs-offset-2
                    col-sm-7 col-sm-offset-2
                    col-md-7 col-md-offset-3
                    col-lg-7 col-lg-offset-3">
            {% if password_sent is defined %}
                <div class="col-xs-8 col-sm-6 col-md-6 col-lg-6 col-md-offset-3">
                    {{ 'email.reset.email.sent'|trans }}
                </div>
            {% else %}
            <div class="col-xs-8 col-sm-6 col-md-6 col-lg-6">
                {{ form_start(form, {'action': path('forget_password'), 'method': "POST"}) }}
                {{ form_widget(form) }}
                {{ form_rest(form) }}
            </div>
            <div class="col-xs-4 col-sm-6 col-md-6 col-lg-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">{{ 'email.button.send'|trans }}</button>
                </div>
            </div>
            {% endif %}
        </div>

    </div>
</div>
{% endblock %}