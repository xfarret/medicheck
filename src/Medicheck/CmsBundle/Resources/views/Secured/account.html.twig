{% extends 'MedicheckCmsBundle::base_secured_layout.html.twig' %}

{% block cms_content %}
    <div class="col-xs-4 col-sm-4 col-md-5 col-lg-5">
        <form name="account" action="{{ path('logged_account') }}" method="post" {{ form_enctype(form) }}>

            <div class="form-group row">
                {{ form_label(form.numSecu, 'register.numsecu'|trans({}, "register"), { 'label_attr': {'class': 'col-md-4 control-label'} } ) }}
                <div class="col-md-8">
                {{ form_widget(form.numSecu, {'attr': {'readonly': 'readonly'} } ) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(form.firstname, 'register.firstname'|trans({}, "register"), { 'label_attr': {'class': 'col-md-4 control-label'} } ) }}
                <div class="col-md-6">
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'} } ) }}
                    </div>
                {{ form_errors(form.firstname) }}
            </div>

            <div class="form-group row">
                {{ form_label(form.lastname, 'register.lastname'|trans({}, "register"), { 'label_attr': {'class': 'col-md-4 control-label'} } ) }}
                <div class="col-md-6">
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'} } ) }}
                </div>
                {{ form_errors(form.lastname) }}
            </div>

            <div class="form-group row">
                {{ form_label(form.passwordUnencoded.first, 'register.password.first'|trans({}, "register"), { 'label_attr': {'class': 'col-md-4 control-label'} } ) }}
                <div class="col-md-6">
                {{ form_widget(form.passwordUnencoded.first, {'attr': {'class': 'form-control'} } ) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(form.passwordUnencoded.second, 'register.password.second'|trans({}, "register"), { 'label_attr': {'class': 'col-md-4 control-label'} } ) }}
                <div class="col-md-6">
                {{ form_widget(form.passwordUnencoded.second, {'attr': {'class': 'form-control'} } ) }}
                </div>
                {{ form_errors(form.passwordUnencoded) }}
            </div>

            <div class="form-group row">
                {{ form_label(form.email, 'register.email'|trans({}, "register"), { 'label_attr': {'class': 'col-md-4 control-label'} } ) }}
                <div class="col-md-6">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'} } ) }}
                </div>
                {{ form_errors(form.email) }}
            </div>


            {{ form_rest(form) }}

            <div class="form-group">
                <button type="submit" class="btn btn-primary">{{ 'account.submit'|trans({}, "account") }}</button>
            </div>
        </form>
    </div>
    <div class="col-xs-5 col-sm-5 col-md-4 col-lg-4">
        {% include "MedicheckCmsBundle:Secured:recipients.html.twig" with { user: user, form: formRecipient } %}
    </div>
{% endblock %}