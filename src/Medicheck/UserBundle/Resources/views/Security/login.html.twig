{% extends 'MedicheckCoreBundle::base_layout.html.twig' %}
{% import 'MedicheckCoreBundle::flashbag_alert.html.twig' as alert %}

{% trans_default_domain "login" %}

{% block stylesheets_header %}
    <link rel="stylesheet" href="{{ asset('bundles/medicheckuser/css/login.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">{{ 'login.title'|trans({}, "login")|raw }}</h1>

            {# Gestion des FlashBag #}
            {{ alert.show_flashbag() }}

            <div class="account-wall">
                <img class="profile-img" src="{{ asset('bundles/medicheckcore/images/logo.jpg') }}"
                     alt="">

                {{ form_start(form, {'action': path('login_check'), 'method': "POST", 'attr': {'class': 'form-signin'}}) }}
                {{ form_widget(form.username) }}
                {{ form_widget(form.password) }}
                {{ form_rest(form) }}

                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    {{ 'login.button.connect'|trans({}, "login") }}</button>
            </div>
            <a href="{{ path('register') }}" class="text-center new-account">{{ 'login.link.register'|trans({}, "login") }}</a>
        </div>
    </div>
</div>
{% endblock %}