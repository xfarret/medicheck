<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="medicheck.repository.user.class">Medicheck\UserBundle\Entity\UserRepository</parameter>
        <parameter key="medicheck.repository.group.class">Medicheck\UserBundle\Entity\GroupRepository</parameter>
        <parameter key="medicheck.manager.user.class">Medicheck\UserBundle\Manager\UserManager</parameter>
    </parameters>

    <services>
        <service id="medicheck.repository.user" class="%medicheck.repository.user.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="string">MedicheckUserBundle:User</argument>
        </service>

        <service id="medicheck.repository.group" class="%medicheck.repository.group.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="string">MedicheckUserBundle:Role</argument>
        </service>

        <service id="medicheck.manager.user" class="%medicheck.manager.user.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="medicheck.repository.user" />
            <argument>%time_validity%</argument>
            <tag name="monolog.logger" channel="medicheck.user" />
        </service>
    </services>
</container>
