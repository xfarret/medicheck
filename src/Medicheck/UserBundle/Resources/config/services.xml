<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="medicheck.repository.user.class">Medicheck\UserBundle\Entity\UserRepository</parameter>
        <parameter key="medicheck.repository.recipient.class">Medicheck\UserBundle\Entity\RecipientRepository</parameter>
        <parameter key="medicheck.repository.role.class">Medicheck\UserBundle\Entity\RoleRepository</parameter>
        <parameter key="medicheck.manager.user.class">Medicheck\UserBundle\Manager\UserManager</parameter>
        <parameter key="medicheck.manager.recipient.class">Medicheck\UserBundle\Manager\RecipientManager</parameter>
    </parameters>

    <services>
        <service id="Medicheck\UserBundle\Entity\UserRepository" class="%medicheck.repository.user.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="string">MedicheckUserBundle:User</argument>
        </service>

        <service id="Medicheck\UserBundle\Entity\RecipientRepository" class="%medicheck.repository.recipient.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="string">MedicheckUserBundle:Recipient</argument>
        </service>

        <service id="Medicheck\UserBundle\Entity\RoleRepository" class="%medicheck.repository.role.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="string">MedicheckUserBundle:UserRole</argument>
        </service>

        <service id="medicheck.manager.user" class="%medicheck.manager.user.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="Medicheck\UserBundle\Entity\UserRepository" />
            <argument type="service" id="Medicheck\UserBundle\Entity\RoleRepository" />
            <argument type="service" id="medicheck.manager.recipient" />
            <argument>%time_validity%</argument>
            <tag name="monolog.logger" channel="medicheck.user" />
        </service>

        <service id="medicheck.manager.recipient" class="%medicheck.manager.recipient.class%">
            <argument type="service" id="Medicheck\UserBundle\Entity\RecipientRepository" />
            <tag name="monolog.logger" channel="medicheck.recipient" />
        </service>
    </services>
</container>
